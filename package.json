    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "eslintConfig": {
    "extends": "satya164",
    "root": true,
    "env": {
      "node": true
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "coverage/",
    "lib/",
    "templates/",
    "__fixtures__/"
  ],
  "prettier": {
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  }
